{
  "name": "sysinfoapi",
  "version": "1.0.0",
  "description": "Small API written in Node to retrieve system software/hardware information and return it to the user.",
  "main": "api.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run frontend\"",
    "server": "pm2 update && pm2 start api.js --name SysInfoAPI --log api.log",
    "frontend": "npm run --prefix frontend start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheConsciousness/SysInfoAPI.git"
  },
  "author": "TheConsciousness",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TheConsciousness/SysInfoAPI/issues"
  },
  "homepage": "https://github.com/TheConsciousness/SysInfoAPI#readme",
  "dependencies": {
    "body-parser": "^1.20.2",
    "colors": "^1.4.0",
    "express": "^4.18.2",
    "node-disk-info": "^1.3.0",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "eslint-plugin-react": "^7.33.2"
  }
}
